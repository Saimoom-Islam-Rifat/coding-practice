// Printing numbers from 1 to n using recursion
#include <stdio.h>

// Recursive function to print numbers from 1 to n
void printNumbers(int n) {
    if (n == 0)  // Base case
        return;
    printNumbers(n - 1);  // Recursive call
    printf("%d ", n);     // Print after recursive call
}

int main() {
    int num;
    printf("Enter a positive integer: ");
    scanf("%d", &num);

    printf("Numbers from 1 to %d: ", num);
    printNumbers(num);
    printf("\n");

    return 0;
}
// Print after recursive call → prints numbers in ascending order (1, 2, 3, …)
// Print before recursive call → prints numbers in descending order (n, n-1, …, 1)
